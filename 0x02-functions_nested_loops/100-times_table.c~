#include "holberton.h"

/**
 * print_times_table - times table
 * add_comma - add comma
 * @n: num
 * Return: Always 0
 */

void print_times_table(int n)
{
	int num1;
	int num2;
	int resul;

	if (n < 15 && n > 0)
	{

		for (num1 = 0; num1 <= n; num1++)
		{
			for (num2 = 0; num2 <= n; num2++)
			{
				resul = num1 * num2;
				if (resul < 10)
				{
					_putchar(' ');
					_putchar(' ');
					_putchar(' ');
					_putchar(resul + '0');
				}
				else if (resul < 100)
				{
					_putchar(' ');
					_putchar(' ');
					_putchar((resul / 10) + '0');
					_putchar((resul % 10) + '0');

				}
				else
				{
					_putchar(' ');
					_putchar((resul / 100) + '0');
					_putchar(((resul / 10) % 10) + '0');
					_putchar((resul % 10) + '0');
				}
				add_comma(n, num2);

			}
			_putchar('\n');
		}
	}
}


void add_comma(int n, int num2)
{
	if (num2 <= (n - 1))
	{
		_putchar(',');
	}
}
